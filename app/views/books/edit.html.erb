<h1>Editing Book</h1>
<!-- 処理失敗時にエラーメッセージを表示 -->
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

<!-- form_with部分 -->
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>

<div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

div class="actions">
  <%= f.submit 'Update Book' %>
</div>

<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
